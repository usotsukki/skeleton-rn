{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react-native",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ESNext",
		"baseUrl": "./",
		"paths": {
			"@app/*": ["src/*"],
			"@assets/*": ["./assets/*"]
		}
	},
	"exclude": [
		"node_modules",
		"ios",
		"android",
		"patches",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js",
		"metro.config.js",
		"jest.config.js",
		"commitlint.config.js"
	],
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
