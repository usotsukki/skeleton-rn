{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react-native",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"module": "Preserve",
		"target": "ESNext",
		"baseUrl": "./",
		"paths": {
			"@app/*": ["src/*"],
			"@assets/*": ["assets/*"]
		}
	},
	"exclude": ["node_modules", "ios", "android"],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"commitlint.config.js",
		"metro.config.js",
		"jest.config.js",
		"babel.config.js",
		".lintstagedrc.mjs",
		".eslintrc.js",
		".expo/types/**/*.ts",
		"expo-env.d.ts"
	]
}
